<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UIMeetMind.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:UIMeetMind.ViewModels"
    x:Name="RootPage"
    BackgroundColor="#FCFCFD">

    <ContentPage.Resources>
        <!-- Par exemple un style pour les titres de carte -->
        <Style x:Key="CardTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">

            <!--  Header  -->
            <Grid
                Padding="0,12"
                ColumnDefinitions="Auto,*"
                VerticalOptions="Center">
                <Border
                    Background="#E3D5FF"
                    HeightRequest="48"
                    Stroke="#E3D5FF"
                    StrokeShape="RoundRectangle 24"
                    WidthRequest="48">
                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="M"
                        TextColor="#7F56D9"
                        VerticalOptions="Center" />
                </Border>
                <VerticalStackLayout Padding="12,0,0,0">

                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="MeetMind"
                        TextColor="#101828" />
                    <Label
                        FontSize="13"
                        Text="Control Center"
                        TextColor="#667085" />
                    <Label
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="Version 1.0"
                        TextColor="#98A2B3"
                        VerticalOptions="Center" />
                </VerticalStackLayout>
                <!--  Recording icon  -->

            </Grid>

            <!--  Status Control  -->
            <!--  Status Card  -->
            <Border
                Padding="24"
                BackgroundColor="#EDE9FE"
                StrokeShape="RoundRectangle 16">
                <VerticalStackLayout>
                    <Image
                        x:Name="recordIcon"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        IsVisible="{Binding HasRecordingInProgress}"
                        Source="record_icon.png"
                        WidthRequest="24" />
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="12">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="Prêt à enregistrer"
                            TextColor="#344054" />
                        <HorizontalStackLayout Spacing="16">

                            <Button
                                Padding="16,8"
                                BackgroundColor="#7F56D9"
                                Command="{Binding StartRecordingCommand}"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                IsVisible="{Binding HasRecordingInProgress, Converter={StaticResource InverseBooleanConverter}}"
                                Text="▶ Démarrer l'enregistrement"
                                TextColor="White" />
                            <Button
                                Padding="16,8"
                                BackgroundColor="#F04438"
                                Command="{Binding StopRecordingCommand}"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                IsVisible="{Binding HasRecordingInProgress}"
                                Text="■ Arrêter"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Réunions Section  -->
            <Border
                Padding="16"
                Stroke="#E4E7EC"
                StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="16">
                    <Grid HorizontalOptions="Fill" VerticalOptions="Start">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Label Style="{StaticResource CardTitleStyle}" Text="Réunions" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="#F2F4F7"
                            Command="{Binding LoadMeetingsCommand}"
                            CornerRadius="8"
                            FontSize="13"
                            HorizontalOptions="End"
                            ImageSource="refresh_icon.png"
                            Text="Actualiser"
                            TextColor="#344054"
                            VerticalOptions="Start" />

                    </Grid>

                    <!--  Conteneur du tableau  -->
                    <Border
                        Padding="0"
                        Stroke="#E0E0E0"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <Grid RowDefinitions="Auto,*">

                            <!--  Ligne d’en-têtes  -->
                            <Grid
                                Padding="10"
                                BackgroundColor="#F9F9F9"
                                ColumnDefinitions="2*,2*,2*,2*,1*">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="ID" />
                                <Label
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    Text="Start Date" />
                                <Label
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    Text="End Date" />
                                <Label
                                    Grid.Column="3"
                                    FontAttributes="Bold"
                                    Text="Status" />
                                <Label
                                    Grid.Column="4"
                                    FontAttributes="Bold"
                                    Text="Actions" />
                            </Grid>

                            <!--  Les lignes de données  -->
                            <CollectionView
                                Grid.Row="1"
                                ItemsSource="{Binding Meetings}"
                                SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <VerticalStackLayout Padding="24" HorizontalOptions="Center">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Center"
                                            Text="Aucune réunion" />
                                        <Label
                                            FontSize="14"
                                            HorizontalOptions="Center"
                                            Text="Démarrez un enregistrement pour commencer à capturer vos réunions."
                                            TextColor="#667085" />
                                    </VerticalStackLayout>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid
                                            Padding="10"
                                            ColumnDefinitions="2*,2*,2*,2*,1*"
                                            ColumnSpacing="0">

                                            <!--  Colonne ID  -->
                                            <Label
                                                Grid.Column="0"
                                                Text="{Binding MeetingId}"
                                                VerticalOptions="Center" />

                                            <!--  Colonne Start Date  -->
                                            <Label
                                                Grid.Column="1"
                                                Text="{Binding StartTimestamp, StringFormat='yyyy-MM-dd'}"
                                                VerticalOptions="Center" />
                                            <!--  Colonne Start Date  -->
                                            <Label
                                                Grid.Column="2"
                                                Text="{Binding EndTimestamp, StringFormat='yyyy-MM-dd'}"
                                                VerticalOptions="Center" />

                                            <!--  Colonne Statut  -->
                                            <Border
                                                Grid.Column="3"
                                                Padding="5,2"
                                                BackgroundColor="{Binding Status, Converter={StaticResource StatutToColorConverter}}"
                                                HorizontalOptions="Start"
                                                StrokeShape="RoundRectangle 12"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontSize="14"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Status}"
                                                    TextColor="{Binding Status, Converter={StaticResource StatutToTextColorConverter}}" />
                                            </Border>

                                            <!--  Colonne Actions  -->
                                            <HorizontalStackLayout
                                                Grid.Column="4"
                                                Spacing="-15"
                                                VerticalOptions="Start">

                                                <!--  Icône Résumé  -->
                                                <ImageButton
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding ShowSummaryCommand}"
                                                    IsVisible="{Binding CanShowSummary}"
                                                    Source="doc_icon.png" />

                                                <!--  Icône Transcription  -->
                                                <ImageButton
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding ShowTranscriptCommand}"
                                                    IsVisible="{Binding CanShowTranscript}"
                                                    Source="doc_icon.png" />

                                                <!--  Icône Suppression  -->
                                                <ImageButton
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding DeleteCommand}"
                                                    Source="trash_icon.png" />

                                            </HorizontalStackLayout>

                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>



            <!--  Files Section  -->
            <HorizontalStackLayout Spacing="16">
                <!--  Fichiers Audio  -->
                <Border
                    Padding="16"
                    StrokeShape="RoundRectangle 12"
                    WidthRequest="300">
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitleStyle}" Text="Fichiers Audio" />

                        <CollectionView
                            ItemsSource="{Binding AudioFiles}"
                            SelectionChangedCommand="{Binding SelectFileCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Mode=OneWay}"
                            SelectionMode="Single">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout
                                    Padding="16"
                                    HorizontalOptions="Center"
                                    Spacing="8">
                                    <Image
                                        HeightRequest="48"
                                        Source="empty_audio.png"
                                        WidthRequest="48" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Aucun fichier audio" />
                                    <Label
                                        FontSize="13"
                                        Text="Démarrez un enregistrement pour générer des fichiers audio."
                                        TextColor="#667085" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,4"
                                        Padding="8"
                                        StrokeShape="RoundRectangle 12">
                                        <VerticalStackLayout Spacing="6">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="13"
                                                Text="{Binding FileName}" />
                                            <HorizontalStackLayout Spacing="12">
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DownloadFileCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="download_icon.png"
                                                    WidthRequest="20" />
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DeleteFileCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="trash_icon.png"
                                                    WidthRequest="20" />
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.TranscribeCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="transcribe_icon.png"
                                                    WidthRequest="20" />
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.SummarizeCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="summary_icon.png"
                                                    WidthRequest="20" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!--  Transcriptions  -->
                <Border
                    Padding="16"
                    StrokeShape="RoundRectangle 12"
                    WidthRequest="300">
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitleStyle}" Text="Transcriptions" />
                        <CollectionView
                            ItemsSource="{Binding TranscriptFiles}"
                            SelectionChangedCommand="{Binding SelectFileCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Mode=OneWay}"
                            SelectionMode="Single">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout
                                    Padding="16"
                                    HorizontalOptions="Center"
                                    Spacing="8">
                                    <Image
                                        HeightRequest="48"
                                        Source="empty_transcript.png"
                                        WidthRequest="48" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Aucune transcription" />
                                    <Label
                                        FontSize="13"
                                        Text="Aucune transcription générée pour l’instant."
                                        TextColor="#667085" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,4"
                                        Padding="8"
                                        StrokeShape="RoundRectangle 12">
                                        <VerticalStackLayout Spacing="6">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="13"
                                                Text="{Binding FileName}" />
                                            <HorizontalStackLayout Spacing="12">
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DownloadFileCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="download_icon.png"
                                                    WidthRequest="20" />
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DeleteFileCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="trash_icon.png"
                                                    WidthRequest="20" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!--  Résumés  -->
                <Border
                    Padding="16"
                    StrokeShape="RoundRectangle 12"
                    WidthRequest="300">
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitleStyle}" Text="Résumés" />
                        <CollectionView
                            ItemsSource="{Binding SummaryFiles}"
                            SelectionChangedCommand="{Binding SelectFileCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Mode=OneWay}"
                            SelectionMode="Single">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout
                                    Padding="16"
                                    HorizontalOptions="Center"
                                    Spacing="8">
                                    <Image
                                        HeightRequest="48"
                                        Source="empty_summary.png"
                                        WidthRequest="48" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Aucun résumé" />
                                    <Label
                                        FontSize="13"
                                        Text="Lancez un résumé après la transcription pour le voir ici."
                                        TextColor="#667085" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,4"
                                        Padding="8"
                                        StrokeShape="RoundRectangle 12">
                                        <VerticalStackLayout Spacing="6">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="13"
                                                Text="{Binding FileName}" />
                                            <HorizontalStackLayout Spacing="12">
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DownloadFileCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="download_icon.png"
                                                    WidthRequest="20" />
                                                <ImageButton
                                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DeleteFileCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Source="trash_icon.png"
                                                    WidthRequest="20" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </HorizontalStackLayout>

           
            <!--  Footer  -->
            <Label
                Margin="0,32,0,0"
                FontSize="12"
                HorizontalOptions="Center"
                Text="© 2025 MeetMind - Solution d'enregistrement et de transcription de réunions"
                TextColor="#98A2B3" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
