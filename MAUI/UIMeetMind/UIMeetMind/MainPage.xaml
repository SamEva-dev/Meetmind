<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UIMeetMind.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:vm="clr-namespace:UIMeetMind.ViewModels"
    x:Name="RootPage"
    BackgroundColor="#FCFCFD">

    <ContentPage.Resources>
        <!--  Par exemple un style pour les titres de carte  -->
        <Style x:Key="CardTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">


            <!--  Header  -->
            <Grid
                Padding="0,12"
                ColumnDefinitions="Auto,*"
                VerticalOptions="Center">
                <Border
                    Background="#E3D5FF"
                    HeightRequest="48"
                    Stroke="#E3D5FF"
                    StrokeShape="RoundRectangle 24"
                    WidthRequest="48">
                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="M"
                        TextColor="#7F56D9"
                        VerticalOptions="Center" />
                </Border>
                <VerticalStackLayout Padding="12,0,0,0">

                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="MeetMind"
                        TextColor="#101828" />
                    <Label
                        FontSize="13"
                        Text="Control Center"
                        TextColor="#667085" />
                    <Label
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="Version 1.0"
                        TextColor="#98A2B3"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Italic"
                        FontSize="12"
                        Text="{Binding ConnectionState}"
                        TextColor="Gray" />
                </VerticalStackLayout>
                <!--  Recording icon  -->

            </Grid>

            <!--  Notifications section  -->
            <Button
                Margin="0,0,0,8"
                Padding="10,5"
                BackgroundColor="#EF4444"
                Command="{Binding ClearAllNotificationsCommand}"
                CornerRadius="8"
                FontSize="13"
                HorizontalOptions="End"
                Text="Effacer toutes les notifications"
                TextColor="White" />

            <CollectionView
                Margin="0,10,0,0"
                ItemsSource="{Binding Notifications}"
                MaximumHeightRequest="200"
                VerticalScrollBarVisibility="Always">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,4"
                            BackgroundColor="{Binding Type, Converter={StaticResource TypeToBackgroundConverter}}"
                            Stroke="{Binding Type, Converter={StaticResource TypeToBorderConverter}}"
                            StrokeShape="RoundRectangle 8"
                            StrokeThickness="1">
                            <HorizontalStackLayout
                                Padding="10"
                                HorizontalOptions="FillAndExpand"
                                Spacing="10">
                                <Image
                                    HeightRequest="20"
                                    Source="{Binding Type, Converter={StaticResource TypeToIconConverter}}"
                                    WidthRequest="20" />
                                <Label
                                    FontSize="13"
                                    HorizontalOptions="StartAndExpand"
                                    Text="{Binding Message}"
                                    TextColor="#1F2937" />
                                <ImageButton
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.RemoveNotificationCommand}"
                                    CommandParameter="{Binding .}"
                                    HeightRequest="20"
                                    Source="trash_icon.png"
                                    WidthRequest="20" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Status Control  -->
            <!--  Status Card  -->
            <Border
                Padding="24"
                BackgroundColor="#EDE9FE"
                StrokeShape="RoundRectangle 16">
                <VerticalStackLayout>
                    <Image
                        x:Name="recordIcon"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        IsVisible="{Binding HasRecordingInProgress}"
                        Source="record_icon.png"
                        WidthRequest="24" />
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="12">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="Prêt à enregistrer"
                            TextColor="#344054" />
                        <HorizontalStackLayout Spacing="16">

                            <Button
                                Padding="16,8"
                                BackgroundColor="#7F56D9"
                                Command="{Binding StartRecordingCommand}"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                IsVisible="{Binding HasRecordingInProgress, Converter={StaticResource InverseBooleanConverter}}"
                                Text="▶ Démarrer l'enregistrement"
                                TextColor="White" />
                            <Button
                                Padding="16,8"
                                BackgroundColor="#F04438"
                                Command="{Binding StopRecordingCommand}"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                IsVisible="{Binding HasRecordingInProgress}"
                                Text="■ Arrêter"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Réunions Section  -->
            <Border
                Padding="16"
                Stroke="#E4E7EC"
                StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="16">
                    <Grid HorizontalOptions="Fill" VerticalOptions="Start">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Label Style="{StaticResource CardTitleStyle}" Text="Réunions" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="#F2F4F7"
                            Command="{Binding LoadMeetingsCommand}"
                            CornerRadius="8"
                            FontSize="13"
                            HorizontalOptions="End"
                            ImageSource="refresh_icon.png"
                            Text="Actualiser"
                            TextColor="#344054"
                            VerticalOptions="Start" />

                    </Grid>

                    <!--  Conteneur du tableau  -->
                    <Border
                        Padding="0"
                        Stroke="#E0E0E0"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <Grid RowDefinitions="Auto,*">

                            <!--  Ligne d’en-têtes  -->
                            <Grid
                                Padding="10"
                                BackgroundColor="#F9F9F9"
                                ColumnDefinitions="2*,2*,2*,2*,1*">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="ID" />
                                <Label
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    Text="Start Date" />
                                <Label
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    Text="End Date" />
                                <Label
                                    Grid.Column="3"
                                    FontAttributes="Bold"
                                    Text="Status" />
                                <Label
                                    Grid.Column="4"
                                    FontAttributes="Bold"
                                    Text="Actions" />
                            </Grid>

                            <!--  Les lignes de données  -->
                            <CollectionView
                                Grid.Row="1"
                                ItemsSource="{Binding Meetings}"
                                MaximumHeightRequest="300"
                                SelectionMode="None"
                                VerticalScrollBarVisibility="Default">
                                <CollectionView.EmptyView>
                                    <VerticalStackLayout Padding="24" HorizontalOptions="Center">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Center"
                                            Text="Aucune réunion" />
                                        <Label
                                            FontSize="14"
                                            HorizontalOptions="Center"
                                            Text="Démarrez un enregistrement pour commencer à capturer vos réunions."
                                            TextColor="#667085" />
                                    </VerticalStackLayout>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid
                                            Padding="10"
                                            ColumnDefinitions="2*,2*,2*,2*,1*"
                                            ColumnSpacing="0">

                                            <!--  Colonne ID  -->
                                            <Label
                                                Grid.Column="0"
                                                Text="{Binding MeetingId}"
                                                VerticalOptions="Center" />

                                            <!--  Colonne Start Date  -->
                                            <Label
                                                Grid.Column="1"
                                                Text="{Binding StartTimestamp, StringFormat='{dd/MM/yyyy}'}"
                                                VerticalOptions="Center" />
                                            <!--  Colonne Start Date  -->
                                            <Label
                                                Grid.Column="2"
                                                Text="{Binding EndTimestamp, StringFormat='{dd/MM/yyyy}'}"
                                                VerticalOptions="Center" />

                                            <!--  Colonne Statut  -->
                                            <Border
                                                Grid.Column="3"
                                                Padding="5,2"
                                                BackgroundColor="{Binding Status, Converter={StaticResource StatutToColorConverter}}"
                                                HorizontalOptions="Start"
                                                StrokeShape="RoundRectangle 12"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontSize="14"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Status}"
                                                    TextColor="{Binding Status, Converter={StaticResource StatutToTextColorConverter}}" />
                                            </Border>

                                            <!--  Colonne Actions  -->
                                            <HorizontalStackLayout
                                                Grid.Column="4"
                                                Spacing="-15"
                                                VerticalOptions="Start">

                                                <!--  Icône Résumé  -->
                                                <ImageButton
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding ShowSummaryCommand}"
                                                    IsVisible="{Binding CanShowSummary}"
                                                    Source="doc_icon.png" />

                                                <!--  Icône Transcription  -->
                                                <ImageButton
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding ShowTranscriptCommand}"
                                                    IsVisible="{Binding CanShowTranscript}"
                                                    Source="doc_icon.png" />

                                                <!--  Icône Suppression  -->
                                                <ImageButton
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding DeleteCommand}"
                                                    Source="trash_icon.png" />

                                            </HorizontalStackLayout>

                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>



            <!--  Files Section  -->
            <HorizontalStackLayout Spacing="16">
                <!--  Fichiers Audio  -->
                <Border
                    Padding="16"
                    StrokeShape="RoundRectangle 12"
                    WidthRequest="300">
                    <VerticalStackLayout>

                        <VerticalStackLayout
                            x:DataType="sys:DateTime"
                            BindingContext="{x:Static sys:DateTime.Now}"
                            VerticalOptions="Center">
                            <Label Style="{StaticResource CardTitleStyle}" Text="Fichiers Audio" />
                            <Label
                                Margin="0,0,0,10"
                                FontSize="12"
                                Text="{Binding Path=Date, StringFormat='{0:dd.MM.yyyy}'}"
                                TextColor="#888888" />
                        </VerticalStackLayout>

                        <CollectionView
                            ItemsSource="{Binding AudioFiles}"
                            MaximumHeightRequest="200"
                            SelectionChangedCommand="{Binding SelectFileCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Mode=OneWay}"
                            SelectionMode="Single"
                            VerticalScrollBarVisibility="Default">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout
                                    Padding="16"
                                    HorizontalOptions="Center"
                                    Spacing="8">
                                    <Image
                                        HeightRequest="48"
                                        Source="empty_set.png"
                                        WidthRequest="48" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Aucun fichier audio" />
                                    <Label
                                        FontSize="13"
                                        Text="Démarrez un enregistrement pour générer des fichiers audio."
                                        TextColor="#667085" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        StrokeShape="RoundRectangle 4"
                                        StrokeThickness="0.2">
                                        <Grid Margin="2" ColumnDefinitions="Auto,*,Auto,Auto">
                                            <HorizontalStackLayout Spacing="8">
                                                <Image
                                                    Background="Transparent"
                                                    HeightRequest="16"
                                                    Source="audio_icon.png"
                                                    WidthRequest="16" />
                                                <VerticalStackLayout VerticalOptions="Center">

                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        Text="{Binding Title}" />
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding EndTimestamp, StringFormat='{0:HH:mm:ss}'}"
                                                        TextColor="#888888" />
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>
                                            <ImageButton
                                                Grid.Column="1"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DownloadFileCommand}"
                                                CommandParameter="{Binding .}"
                                                Source="download_icon.png" />
                                            <ImageButton
                                                Grid.Column="2"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DeleteFileCommand}"
                                                CommandParameter="{Binding .}"
                                                Source="trash_icon.png" />
                                            <ImageButton
                                                Grid.Column="3"
                                                BackgroundColor="Transparent"
                                                HeightRequest="24"
                                                Source="more_vert_icon.png"
                                                WidthRequest="24">

                                                <!--  ATTACHED PROPERTY sur FlyoutBase, pas sur ImageButton directement  -->
                                                <FlyoutBase.ContextFlyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem
                                                            Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.TranscribeFileCommand}"
                                                            CommandParameter="{Binding .}"
                                                            Text="Transcription" />
                                                        <MenuFlyoutItem
                                                            Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.SummarizeFileCommand}"
                                                            CommandParameter="{Binding .}"
                                                            Text="Résumé" />
                                                    </MenuFlyout>
                                                </FlyoutBase.ContextFlyout>
                                            </ImageButton>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!--  Transcriptions  -->
                <Border
                    Padding="16"
                    StrokeShape="RoundRectangle 12"
                    WidthRequest="300">
                    <VerticalStackLayout>
                        <VerticalStackLayout
                            x:DataType="sys:DateTime"
                            BindingContext="{x:Static sys:DateTime.Now}"
                            VerticalOptions="Center">
                            <Label Style="{StaticResource CardTitleStyle}" Text="Transcriptions" />
                            <Label
                                Margin="0,0,0,10"
                                FontSize="12"
                                Text="{Binding Path=Date, StringFormat='{0:dd.MM.yyyy}'}"
                                TextColor="#888888" />
                        </VerticalStackLayout>
                        <CollectionView
                            ItemsSource="{Binding TranscriptFiles}"
                            MaximumHeightRequest="200"
                            SelectionChangedCommand="{Binding SelectFileCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Mode=OneWay}"
                            SelectionMode="Single"
                            VerticalScrollBarVisibility="Always">

                            <CollectionView.EmptyView>
                                <VerticalStackLayout
                                    Padding="16"
                                    HorizontalOptions="Center"
                                    Spacing="8">
                                    <Image
                                        HeightRequest="48"
                                        Source="empty_set.png"
                                        WidthRequest="48" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Aucune transcription" />
                                    <Label
                                        FontSize="13"
                                        Text="Aucune transcription générée pour l’instant."
                                        TextColor="#667085" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeShape="RoundRectangle 4" StrokeThickness="0.2">
                                        <Grid Margin="2" ColumnDefinitions="Auto,*,Auto,Auto">
                                            <HorizontalStackLayout Spacing="8">
                                                <Image
                                                    Background="Transparent"
                                                    HeightRequest="12"
                                                    Source="doc_icon.png"
                                                    WidthRequest="12" />
                                                <VerticalStackLayout VerticalOptions="Center">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        Text="{Binding Title}" />
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding EndTimestamp, StringFormat='{0:HH:mm:ss}'}"
                                                        TextColor="#888888" />
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>
                                            <ImageButton
                                                Grid.Column="1"
                                                Background="Transparent"
                                                Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DownloadFileCommand}"
                                                CommandParameter="{Binding .}"
                                                Source="download_icon.png"
                                                WidthRequest="20" />
                                            <ImageButton
                                                Grid.Column="2"
                                                Background="Transparent"
                                                Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DeleteFileCommand}"
                                                CommandParameter="{Binding .}"
                                                Source="trash_icon.png"
                                                WidthRequest="20" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!--  Résumés  -->
                <Border
                    Padding="16"
                    StrokeShape="RoundRectangle 12"
                    WidthRequest="300">
                    <VerticalStackLayout>
                        <VerticalStackLayout
                            x:DataType="sys:DateTime"
                            BindingContext="{x:Static sys:DateTime.Now}"
                            VerticalOptions="Center">
                            <Label Style="{StaticResource CardTitleStyle}" Text="Résumés" />
                            <Label
                                Margin="0,0,0,10"
                                FontSize="12"
                                Text="{Binding Path=Date, StringFormat='{0:dd.MM.yyyy}'}"
                                TextColor="#888888" />
                        </VerticalStackLayout>
                        <CollectionView
                            ItemsSource="{Binding SummaryFiles}"
                            MaximumHeightRequest="200"
                            SelectionChangedCommand="{Binding SelectFileCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Mode=OneWay}"
                            SelectionMode="Single"
                            VerticalScrollBarVisibility="Always">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout
                                    Padding="16"
                                    HorizontalOptions="Center"
                                    Spacing="8">
                                    <Image
                                        HeightRequest="48"
                                        Source="empty_set.png"
                                        WidthRequest="48" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        Text="Aucun résumé" />
                                    <Label
                                        FontSize="13"
                                        Text="Lancez un résumé après la transcription pour le voir ici."
                                        TextColor="#667085" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeShape="RoundRectangle 4" StrokeThickness="0.2">
                                        <Grid Margin="2" ColumnDefinitions="Auto,*,Auto">
                                            <HorizontalStackLayout Spacing="8">
                                                <Image
                                                    Background="Transparent"
                                                    HeightRequest="12"
                                                    Source="doc_icon.png"
                                                    WidthRequest="12" />

                                                <VerticalStackLayout VerticalOptions="Center">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        Text="{Binding Title}" />
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding EndTimestamp, StringFormat='{0:HH:mm:ss}'}"
                                                        TextColor="#888888" />
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>
                                            <ImageButton
                                                Grid.Column="1"
                                                Background="Transparent"
                                                Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DownloadFileCommand}"
                                                CommandParameter="{Binding .}"
                                                Source="download_icon.png"
                                                WidthRequest="20" />
                                            <ImageButton
                                                Grid.Column="2"
                                                Background="Transparent"
                                                Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.DeleteFileCommand}"
                                                CommandParameter="{Binding .}"
                                                Source="trash_icon.png"
                                                WidthRequest="20" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </HorizontalStackLayout>


            <!--  Footer  -->
            <Label
                Margin="0,32,0,0"
                FontSize="12"
                HorizontalOptions="Center"
                Text="© 2025 MeetMind - Solution d'enregistrement et de transcription de réunions"
                TextColor="#98A2B3" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
